<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.system.mapper.RequirementMapper">
    
    <resultMap type="Requirement" id="RequirementResult">
        <result property="id"    column="id"    />
        <result property="userId"    column="user_id"    />
        <result property="content"    column="content"    />
        <result property="status"    column="status"    />
        <result property="publishTime"    column="publish_time"    />
    </resultMap>

    <sql id="selectRequirementVo">
        select id, user_id, content, status, publish_time from requirement
    </sql>

    <select id="selectRequirementList" parameterType="Requirement" resultMap="RequirementResult">
        <include refid="selectRequirementVo"/>
        <where>  
            <if test="userId != null "> and user_id = #{userId}</if>
            <if test="content != null  and content != ''"> and content = #{content}</if>
            <if test="status != null "> and status = #{status}</if>
            <if test="publishTime != null "> and publish_time = #{publishTime}</if>
        </where>
    </select>
    
    <select id="selectRequirementById" parameterType="Long" resultMap="RequirementResult">
        <include refid="selectRequirementVo"/>
        where id = #{id}
    </select>

    <insert id="insertRequirement" parameterType="Requirement" useGeneratedKeys="true" keyProperty="id">
        insert into requirement
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="userId != null">user_id,</if>
            <if test="content != null and content != ''">content,</if>
            <if test="status != null">status,</if>
            <if test="publishTime != null">publish_time,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="userId != null">#{userId},</if>
            <if test="content != null and content != ''">#{content},</if>
            <if test="status != null">#{status},</if>
            <if test="publishTime != null">#{publishTime},</if>
         </trim>
    </insert>

    <update id="updateRequirement" parameterType="Requirement">
        update requirement
        <trim prefix="SET" suffixOverrides=",">
            <if test="userId != null">user_id = #{userId},</if>
            <if test="content != null and content != ''">content = #{content},</if>
            <if test="status != null">status = #{status},</if>
            <if test="publishTime != null">publish_time = #{publishTime},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteRequirementById" parameterType="Long">
        delete from requirement where id = #{id}
    </delete>

    <delete id="deleteRequirementByIds" parameterType="String">
        delete from requirement where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    <select id="selectRequirementByuserId" parameterType="Requirement">
        select * from requirement where user_id=#{id}
    </select>
</mapper>